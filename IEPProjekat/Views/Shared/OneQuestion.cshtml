@model IEPProjekat.Models.Question

@{ 
    var text = "";
    var flag = false;
    var flagBackground = "border-danger";
    if (Model.Status==1)
    {
        flagBackground = "border-primary";
    }
    if (Model.Text.Length > 255)
    {
        text = Model.Text.Substring(0, 253);
        flag = true;
    }
    else
    {
        text = Model.Text;
    }
}

<div class="row py-3 px-2 my-5 border @flagBackground bg-">
    <div class="col-12">
        <div class="row">
            <div class="col-3">
                <div style="width:200px; height:200px;"><a href="@Url.Action("openQuestion", new { index = Model.Id })"><img style="width:100%; height:100%;"src="@Url.Content("~/" + Model.Picture)" alt="Failed to load image"/></a></div>
            </div>
            <div class="col-9">
                <div class="row">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-11">
                                <h4 style="display:inline;"><a>@Html.ActionLink(@Model.Title, "openQuestion", new { index = Model.Id })</a></h4>
                                <h5 style="display:inline;"> : &nbsp;@Model.Author.Name  @Model.Author.LastName</h5>
                            </div>
                            <div class="col-1">
                                @{ if (Model.Status == 1)
                                    {
                                        <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-lock" aria-hidden="true"></i>
                                    }
                                }
                                <div style="width:20px; height:20px;"></div>
                            </div>
                        </div>
                     </div>
                </div>
                <div class="row pt-2"><div class="col-12"><p style="word-break:break-all; text-align:justify;">@text
                    @{if (flag)
                    {
                            <a>@Html.ActionLink("...", "openQuestion", new { index = Model.Id })</a>}
                    }
                    </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
