
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/MyBootstrap.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-primary navbar-fixed-top">
        <a class="navbar-brand" href="#">DusanovTechSupp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#"> @Html.ActionLink("View my profile", "goToMyProfile") <span class="sr-only">(current)</span></a>
                    <a class="nav-link" href="#"> @Html.ActionLink("Buy tokens", "openBuyTokensPage") <span class="sr-only">(current)</span></a>
                </li>
            </ul>
        </div>
        <form class="form-inline md-form mr-auto mb-4" method="get" action="Home/searchByWord">
            <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search" name="text">
            <button class="btn btn-outline-secondary btn-rounded btn-sm my-0" type="submit">Search</button>
        </form>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
